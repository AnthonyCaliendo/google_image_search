<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/image_search_edit_filters_size_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/image_search_edit_filters_size"
        android:layout_alignParentLeft="true" />

    <Spinner
        android:id="@+id/image_search_edit_filters_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/image_search_edit_filters_size_label"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/image_search_edit_filters_color_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/image_search_edit_filters_color"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/image_search_edit_filters_size"/>

    <Spinner
        android:id="@+id/image_search_edit_filters_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/image_search_edit_filters_color_label"
        android:layout_below="@id/image_search_edit_filters_size"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/image_search_edit_filters_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/image_search_edit_filters_type"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/image_search_edit_filters_color"/>

    <Spinner
        android:id="@+id/image_search_edit_filters_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/image_search_edit_filters_type_label"
        android:layout_below="@id/image_search_edit_filters_color"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/image_search_edit_filters_site_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/image_search_edit_filters_site"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/image_search_edit_filters_type"/>

    <EditText
        android:id="@+id/image_search_edit_filters_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/image_search_edit_filters_site_label"
        android:layout_below="@id/image_search_edit_filters_type"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>